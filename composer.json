{
    "name": "bildungszentrum-kvbl/remote-steuerung",
    "description": "Remote-Steuerungs Software für Klassenzimmer.",
    "license": "CC-BY-NC-3.0",
    "type": "project",
    "authors": [
        {
            "name": "Dominik Müller",
            "email": "ashura+support@protonmail.ch",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.3",
        "ext-json": "*",
        "ext-simplexml": "*",
        "ext-curl": "*",
        "symfony/symfony": "^4.4.0",
        "symfony/twig-bundle": "^4.4.0",
        "doctrine/orm": "^2.5.6",
        "doctrine/doctrine-bundle": "^1.6.13",
        "symfony/swiftmailer-bundle": "^3.4",
        "symfony/monolog-bundle": "^3.5",
        "sensio/framework-extra-bundle": "^5.0.0",
        "incenteev/composer-parameter-handler": "^2.1",
        "doctrine/doctrine-fixtures-bundle": "~2.3",
        "fr3d/ldap-bundle": "^4.0",
        "friendsofsymfony/user-bundle": "~2.0",
        "friendsofsymfony/jsrouting-bundle": "^2.4",
        "bcc/cron-manager-bundle": "^4.1",
        "gos/web-socket-bundle": "^1.8",
        "suncat/mobile-detect-bundle": "^1.1",
        "fresh/firebase-cloud-messaging-bundle": "^0.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "symfony/web-server-bundle": "^4.4.0",
        "symfony/phpunit-bridge": "~2.7"
    },
    "prefer-stable": true,
    "scripts": {
        "auto-scripts": [],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "config": {
        "platform": {
            "php": "7.3"
        }
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    }
}
