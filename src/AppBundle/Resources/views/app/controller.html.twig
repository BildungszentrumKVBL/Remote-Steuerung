{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    {% include 'AppBundle:app/content:controller.html.twig' %}
{% endblock %}

{% block postJavascript %}
    <script>app.environment.firebaseSenderID = "{{ firebase_server_id }}"</script>
    <script>firebase.initializeApp({messagingSenderId: app.environment.firebaseSenderID});</script>
    <script>app.messaging = firebase.messaging(); app.init(); controller.views = {{ app_twig_helper.getViews()|json_encode|raw }}; app.actions.updateNavigation({{ app_twig_helper.getRoomForUser(app.user)|json_encode|raw }});</script>
{% endblock %}
