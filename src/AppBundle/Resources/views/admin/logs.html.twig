{% extends app.request.xmlHttpRequest
? 'AppBundle::ajax-base.html.twig'
: 'AppBundle::base.html.twig'%}

{% block body %}
    <div class="container">
        <div class="panel panel-primary bootable boot-start filters">
            <div class="panel-heading">
                <h3 class="panel-title">Filter</h3>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" method="post" onsubmit="return false;">
                    <fieldset>
                        <div class="form-group">
                            <label for="benutzer" class="col-md-2 control-label">Benutzer</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" name="benutzer" id="benutzer" autocorrect="off" autocapitalize="none" list="usernames" placeholder="Alle">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="level" class="col-md-2 control-label">Level</label>
                            <div class="col-md-10">
                                <select class="form-control select" name="level" id="level">
                                    <option value="">Alle</option>
                                    <option value="{{ constant('AppBundle\\Entity\\Log::LEVEL_INFO') }}">Infos</option>
                                    <option value="{{ constant('AppBundle\\Entity\\Log::LEVEL_COMMAND') }}">Befehle</option>
                                    <option value="{{ constant('AppBundle\\Entity\\Log::LEVEL_SYSTEM') }}">System</option>
                                    <option value="{{ constant('AppBundle\\Entity\\Log::LEVEL_ERROR') }}">Error</option>
                                </select>
                            </div>
                        </div>
                        <input type="hidden" name="filtern" value="1">
                        <div class="form-group">
                            <button type="submit" name="senden" value="1" class="btn btn-primary pull-right">Filtern</button>
                        </div>
                    </fieldset>
                    <datalist id="usernames">
                        {% for user in users %}
                            <option>{{ user.username }}</option>
                        {% endfor %}
                    </datalist>
                </form>
            </div>
        </div>
        <div class="well bootable boot-start">
            <h1>Logs</h1>
            <div class="log-container">
                {% include 'AppBundle:admin/snippets:logTable.html.twig' with {'logs': logs} %}
            </div>
        </div>
    </div>
{% endblock %}
